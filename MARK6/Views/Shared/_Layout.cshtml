	<style>
		body {
			padding-top: 50px;
		}

		.sidebar {
			height: 100%;
			width: 250px;
			position: fixed;
			background-color: #f8f9fa;
			padding-top: 20px;
			/*padding-left: 10px;*/
			background-color: #337ab7;
			color: #3373;
		}

			.sidebar ul {
			
				margin: 0px;
			}

				.sidebar ul li {
					margin-top: 10px;
					background-color: #ddd;
					color: black;
					width:100%;
				}

					.sidebar ul li a {
						display: block;
						padding: 10px;
						color: #000;
						border: 1px solid white;
						font-size: inherit;
						text-decoration: none;
						width: 100%;
					}


						.sidebar ul li a:hover {
							background-color: darkslateblue;
							color: #fff;
							width: 100%;
						}

			.sidebar .nav > li > a {
				padding-left: 20px;
				
			}

		.dropdown-menu-nested {
			position: absolute;
			top: 0;
			left: 100%;
			margin-top: -34px; /* Adjust this value to position the nested menu */
		}
	</style>
</head>
